@model StoreItemViewModel

@{
    ViewBag.Title = "Add Store Item";
}

<h2>Add Store Item</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="SelectedStoreId" class="control-label">Store</label>
        <select asp-for="SelectedStoreId" asp-items="Model.Stores" class="form-control"></select>
        <span asp-validation-for="SelectedStoreId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedItemId" class="control-label">Item</label>
        <select asp-for="SelectedItemId" asp-items="Model.Items" class="form-control"></select>
        <span asp-validation-for="SelectedItemId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<a class="btn btn-dark" asp-action="Index" class="btn btn-dark">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
